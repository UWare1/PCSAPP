<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/BottomSheetContainer2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/promptbold"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/profile"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="10dp"
        android:background="#DCDCDC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ProfileImageDialog"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/iconprofile"
            android:elevation="8dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="16dp"
            android:background="#DDDADA"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/promptlight"
                android:text="Yutthana Piyawongwatthana"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/Born"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:fontFamily="@font/promptlight"
                android:text="18 December 2544"
                android:textSize="18sp"></TextView>

            <TextView
                android:id="@+id/IDCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/promptlight"
                android:text="1234567891234"
                android:textSize="18sp"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="12dp"
        android:gravity="start |center_vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/pbutton"
            android:background="@drawable/phone1"></ImageView>

        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/promptlight"
            android:text="063-139-6720"
            android:textSize="18sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="12dp"
        android:gravity="start |center_vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/pbutton"
            android:background="@drawable/email"></ImageView>

        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/promptlight"
            android:gravity="start"
            android:text="chusana.w@ku.th"
            android:textSize="18sp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="12dp"
        android:gravity="start |center_vertical">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/pbutton"
            android:background="@drawable/address"></ImageView>

        <TextView
            android:id="@+id/Address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/promptlight"
            android:gravity="start"
            android:text="39 Moo 10 Donmaklua Supanburi Uthong 72220"
            android:textSize="18sp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/SAVE"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/yobutton"
        android:fontFamily="@font/promptbold"
        android:text="@string/understand"
        android:textSize="18sp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_marginBottom="15dp"></View>
</LinearLayout>
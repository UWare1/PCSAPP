<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8F4EB"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Common.LoginSignup.ForgetPasswordSuccessMessage">


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/success_message_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="26dp"
            android:background="@drawable/done" />

        <TextView
            android:id="@+id/passupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/ubuntubold"
            android:text="Password Updated !"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30sp" />


        <TextView
            android:id="@+id/successPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/ubuntulight"
            android:text="your password has been changed"
            android:textAlignment="center"
            android:textColor="#787878"
            android:textSize="16sp" />


        <Button
            android:id="@+id/BackMenu"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@drawable/yobutton"
            android:text="Login"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>
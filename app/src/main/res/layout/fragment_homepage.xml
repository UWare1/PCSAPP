<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomepageFragment"
    android:id="@+id/HomePage"
    android:background="@color/colorPrimaryDark">

    <View
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:background="@drawable/backgroundhome"
        android:layout_gravity="center_horizontal">

    </View>

    <ImageView
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:background="@drawable/pcst2"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp">

    </ImageView>
    <View
        android:layout_width="130dp"
        android:layout_height="1.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:background="#fff"></View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <View
            android:layout_width="370dp"
            android:layout_height="160dp"
            android:background="@drawable/homeslide"
            android:layout_centerInParent="true"/>
        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="350dp"
            android:layout_height="140dp"
            app:auto_cycle="true"
            app:delay="0"
            app:period="3000"
            app:placeholder="@color/black"
            app:error_image="@color/white"
            android:backgroundTintMode="screen"
            android:id="@+id/slider"
            app:corner_radius="20"
            android:layout_centerInParent="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="260dp"
        android:paddingTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="340dp"
            android:layout_height="110dp"
            android:background="@drawable/homehistory">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="13dp"
                android:paddingStart="20dp"
                android:paddingEnd="13dp"
                android:paddingBottom="26dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recents"
                    android:textColor="#fff"
                    android:textSize="16sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingTop="16dp"
                    android:text="History"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="26sp"></TextView>

                <View
                    android:layout_width="280dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:background="#fff">

                </View>
                <View
                    android:id="@+id/ToADD"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/homehistory">

                </View>

                <Button
                    android:id="@+id/ToRecentsHistory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000" />

            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="26dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Function"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:textColor="#fff"
                android:textSize="30sp"
                android:layout_marginEnd="30dp">

            </TextView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"
                android:layout_marginTop="5dp">

            </View>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarSize="1dp"
            android:scrollbarThumbHorizontal="@drawable/thumbscroll">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rowCount="1"
                android:columnCount="5"
                android:paddingHorizontal="20dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/Card1"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#FF7474"
                app:cardCornerRadius="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="42sp"
                    android:layout_marginLeft="15dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="42sp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="27.5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="42sp"
                    android:layout_marginLeft="62.5dp"
                    android:layout_marginTop="62dp"/>
            </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Card2"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#FFB74D"
                    app:cardCornerRadius="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="27.5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="62.5dp"
                        android:layout_marginTop="62dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Card3"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#E3F155"
                    app:cardCornerRadius="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="27.5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="62.5dp"
                        android:layout_marginTop="62dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Card4"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_margin="10dp"
                    app:cardBackgroundColor="#5C75FF"
                    app:cardCornerRadius="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:layout_marginLeft="28dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="27.5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="62dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="40sp"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="62dp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/Card5"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#D063FF"
                    app:cardCornerRadius="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPEED"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="24sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="2.5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CON"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="26sp"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="35.5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:textSize="42sp"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="12dp"/>
                </androidx.cardview.widget.CardView>
            </GridLayout>
        </HorizontalScrollView>

    </LinearLayout>
</FrameLayout>
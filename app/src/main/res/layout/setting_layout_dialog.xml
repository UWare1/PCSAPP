<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="408dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">



    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="50dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="5dp"
                android:text="Bright"
                android:textAllCaps="true"
                android:textSize="20sp"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center">
                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="28dp"
                    android:background="@drawable/block_brightness">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/brightness"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10.5dp"/>
                </LinearLayout>
                <SeekBar
                    android:id="@+id/Lightbar"
                    android:translationZ="-5dp"
                    android:layout_width="230dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="0dp"
                    android:layout_gravity="center"
                    android:thumb="@drawable/thumb"
                    android:progressDrawable="@drawable/seekbar_background"
                    android:padding="6dp"
                    android:layout_marginLeft="30.5dp"/>
            </FrameLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Music"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="24.5dp"
                android:layout_marginBottom="2.5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming Soon..."
                android:layout_marginLeft="60dp"/>
            <Button
                android:id="@+id/MusicButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="40dp"
                android:background="@drawable/yobutton"
                android:text="ON"
                android:textSize="18sp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/exit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="275dp"
        android:background="@drawable/exit"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.91"
        app:layout_constraintStart_toStartOf="@+id/cardView" />

</androidx.constraintlayout.widget.ConstraintLayout>